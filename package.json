{
  "private": true,
  "workspaces": [
    "pymm-home",
    "pymm-docs"
  ],
  "devDependencies": {
    "concurrently": "^8.0.1"
  },
  "scripts": {
    "dev:astro": "npm --workspace pymm-home run dev",
    "dev:docs": "mkdocs serve -f pymm-docs/mkdocs.yml -a 127.0.0.1:8000",
    "dev": "concurrently -k -n astro,docs -c green,magenta \"npm run dev:astro\" \"npm run dev:docs\"",
    "docs:build": "mkdocs build -f pymm-docs/mkdocs.yml"
  }
}
